    </dependency>
    <dependency>
      <groupId>org.eclipse.jetty</groupId>
      <artifactId>jetty-util</artifactId>
      <version>${dependency.version.jetty}</version>
    </dependency>

    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
